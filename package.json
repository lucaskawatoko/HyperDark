{
  "name": "hyperdark",
  "displayName": "HyperDark",
  "description": "A melhor e mais completa extensão VSCode para desenvolvedores que amam temas escuros! Inclui tema personalizado, servidor local, relógio na barra de status, conversor PX para REM e muito mais.",
  "version": "1.0.2",
  "publisher": "lucaskawatoko",
  "license": "MIT",
  "author": {
    "name": "Lucas Kawatoko",
    "email": "lucaskawatoko@gmail.com"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucaskawatoko/HyperDark.git"
  },
  "bugs": {
    "url": "https://github.com/lucaskawatoko/HyperDark/issues"
  },
  "categories": [
    "Themes",
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "theme",
    "dark",
    "live server",
    "php",
    "css",
    "clock",
    "pomodoro"
  ],
  "icon": "imgs/Logo_extensao_Hyper_Dark.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:hyperdark.startLiveServer",
    "onCommand:hyperdark.stopLiveServer",
    "onCommand:hyperdark.toggleGlow",
    "onCommand:hyperdark.clockAction"
  ],
  "main": "./extension.js",
  "contributes": {
    "themes": [
      {
        "label": "HyperDark",
        "uiTheme": "vs-dark",
        "path": "./themes/hyperdark-color-theme.json"
      }
    ],
    "configuration": {
      "title": "HyperDark Settings",
      "properties": {
        "hyperdark.enableGlow": {
          "type": "boolean",
          "default": true,
          "description": "Ativa o efeito de brilho neon (glow) ao redor das cores detectadas."
        },
        "hyperdark.opacity": {
          "type": "number",
          "default": 0.15,
          "enum": [
            0.05,
            0.15,
            0.3,
            0.5,
            0.8,
            1.0
          ],
          "enumDescriptions": [
            "Ultra Sutil (5%) - Quase invisível",
            "Vidro Padrão (15%) - Recomendado",
            "Vidro Forte (30%) - Mais destaque",
            "Meio a Meio (50%) - Bastante cor",
            "Intenso (80%) - Quase sólido",
            "Sólido (100%) - Sem transparência"
          ],
          "description": "Escolha a intensidade do efeito de vidro no fundo da cor."
        },
        "hyperdark.enablePxToRem": {
          "type": "boolean",
          "default": true,
          "description": "Ativa o conversor automático de PX para REM ao passar o mouse."
        },
        "hyperdark.enableVariableMatching": {
          "type": "boolean",
          "default": true,
          "description": "Ativa a detecção inteligente de variáveis CSS (--var) e SASS ($var)."
        },
        "hyperdark.showClock": {
          "type": "boolean",
          "default": true,
          "description": "Exibe o relógio digital e cronômetro na barra de status."
        },
        "hyperdark.liveServerPort": {
          "type": "number",
          "default": 5500,
          "description": "Define a porta preferencial para o Live Server (ex: 5500, 8080)."
        },
        "hyperdark.cursorStyle": {
          "type": "string",
          "default": "line",
          "enum": [
            "line",
            "block",
            "underline",
            "line-thin",
            "block-outline",
            "underline-thin"
          ],
          "enumDescriptions": [
            "Linha Vertical (|)",
            "Bloco Cheio (█)",
            "Sublinhado (_)",
            "Linha Fina",
            "Contorno do Bloco",
            "Sublinhado Fino"
          ],
          "description": "Escolha o formato do cursor."
        },
        "hyperdark.cursorBlinking": {
          "type": "string",
          "default": "expand",
          "enum": [
            "blink",
            "smooth",
            "phase",
            "expand",
            "solid"
          ],
          "enumDescriptions": [
            "Piscar Seco (Padrão)",
            "Suave (Fade in/out)",
            "Fase (Retrô)",
            "Expandir (Respiração)",
            "Sólido (Não pisca)"
          ],
          "description": "Escolha como o cursor deve piscar."
        },
        "hyperdark.cursorSmoothAnimation": {
          "type": "string",
          "default": "on",
          "enum": [
            "on",
            "off",
            "explicit"
          ],
          "description": "Ativa a animação suave de movimento do cursor"
        }
      }
    },
    "configurationDefaults": {
      "[html]": {
        "editor.linkedEditing": true
      },
      "[xml]": {
        "editor.linkedEditing": true
      },
      "[php]": {
        "editor.linkedEditing": true
      },
      "[javascriptreact]": {
        "editor.linkedEditing": true
      },
      "[typescriptreact]": {
        "editor.linkedEditing": true
      }
    },
    "commands": [
      {
        "command": "hyperdark.openSettings",
        "title": "HyperDark: Open Settings"
      },
      {
        "command": "hyperdark.startLiveServer",
        "title": "Start HyperServer"
      },
      {
        "command": "hyperdark.stopLiveServer",
        "title": "Stop HyperServer"
      },
      {
        "command": "hyperdark.toggleGlow",
        "title": "HyperDark: Toggle Neon Effect"
      },
      {
        "command": "hyperdark.clockAction",
        "title": "HyperDark: Focus Timer"
      }
    ],
    "keybindings": [
      {
        "command": "hyperdark.startLiveServer",
        "key": "alt+l",
        "mac": "opt+l",
        "when": "editorTextFocus"
      },
      {
        "command": "hyperdark.stopLiveServer",
        "key": "alt+q",
        "mac": "opt+q"
      },
      {
        "command": "hyperdark.toggleGlow",
        "key": "alt+g",
        "mac": "opt+g"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "hyperdark.startLiveServer",
          "group": "navigation",
          "when": "resourceExtname == .html"
        },
        {
          "command": "hyperdark.stopLiveServer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.60.0",
    "eslint": "^9.21.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "ws": "^8.18.3"
  }
}