{
  "name": "hyperdark",
  "displayName": "HyperDark",
  "description": "A VS Code extension that enables a pure black theme with high-contrast colors and an integrated Live Server.",
  "version": "0.0.11",
  "publisher": "lucaskawatoko",
  "license": "MIT",
  "author": {
    "name": "Lucas Kawatoko",
    "email": "lucaskawatoko@gmail.com"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucaskawatoko/HyperDark.git"
  },
  "bugs": {
    "url": "https://github.com/lucaskawatoko/HyperDark/issues"
  },
  "homepage": "https://github.com/lucaskawatoko/HyperDark",
  "categories": [
    "Themes",
    "Visualization"
  ],
  "keywords": [
    "theme",
    "dark",
    "high-contrast",
    "customization",
    "live server",
    "reload"
  ],
  "icon": "imgs/Logo_extensao_Hyper_Dark.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:hyperdark.startLiveServer",
    "onCommand:hyperdark.stopLiveServer"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "HyperDark Settings",
      "properties": {
        "hyperdark.themeEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Ativa ou desativa o tema HyperDark."
        },
        "hyperdark.selectedTheme": {
          "type": "string",
          "default": "dark",
          "enum": ["dark", "light"],
          "description": "Escolha o tema."
        }
      }
    },
    "commands": [
      {
        "command": "hyperdark.openSettings",
        "title": "Open HyperDark Settings"
      },
      {
        "command": "hyperdark.startLiveServer",
        "title": "HyperDark: Start Live Server"
      },
      {
        "command": "hyperdark.stopLiveServer",
        "title": "HyperDark: Stop Live Server"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "hyperdark.startLiveServer",
          "group": "navigation",
          "when": "resourceExtname == .html"
        },
        {
          "command": "hyperdark.stopLiveServer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.60.0",
    "eslint": "^9.21.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "open": "^11.0.0",
    "ws": "^8.18.3"
  }
}
